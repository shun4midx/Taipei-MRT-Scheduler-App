<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaipeiMRTScheduler" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_blue</item>
        <item name="colorPrimaryVariant">@color/custom_dark_blue</item>
        <item name="colorOnPrimary">@color/custom_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_pink</item>
        <item name="colorSecondaryVariant">@color/custom_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/TaipeiMRT.ActionBar</item>
        <item name="actionBarStyle">@style/TaipeiMRT.ActionBar</item>
    </style>

    <style name="TaipeiMRT.ActionBar"
        parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/custom_dark_blue</item>
        <item name="titleTextStyle">@style/TaipeiMRT.ActionBar.Title</item>
    </style>

    <style name="TaipeiMRT.ActionBar.Title"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/custom_purple</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>